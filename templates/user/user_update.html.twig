{% extends 'layout.html.twig' %}
{% block title %}Zero PASSword Knowledge :: Users{% endblock %}

{% block main %}
    <header>
        <h2 class="header">{{ user }}</h2>
    </header>
    {% include '_partials/_breadcrumb.html.twig' with {items: {
        'user_list': 'Users',
        '#': 'Edit user: ' ~ user
    }} %}
    <div class="card">
        <div class="card-content">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="switch right-align">
            <label>
                Disabled
                {{ form_widget(form.enabled) }}
                <span class="lever"></span>
                Enabled
            </label>
        </div>
        {{ form_row(form.email) }}

        {{ form_rest(form) }}

        <button class="waves-effect waves-light btn" type="submit">Save</button>

        {{ form_end(form) }}
        </div>
    </div>

{% endblock %}