{% extends 'layout.html.twig' %}
{% block title %}SocialIM :: Users{% endblock %}

{% block main %}
    <header>
        <h2 class="header">{{ user }}</h2>
    </header>
    <div class="card">
        <div class="card-content">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
        {{ form_rest(form) }}

        <button class="waves-effect waves-light btn" type="submit">Save</button>

        {{ form_end(form) }}
        </div>
    </div>

{% endblock %}