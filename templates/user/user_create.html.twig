{% extends 'layout.html.twig' %}
{% block title %}SocialIM :: Create user{% endblock %}

{% block main %}
    <header>
        <h2 class="header">Add user</h2>
    </header>
    {% include '_partials/_breadcrumb.html.twig' with {items: {
        'user_list': 'Users',
        '#': 'Add user'
    }} %}

    <div class="card">
        <div class="card-content">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="switch right-align">
            <label>
                User
                {{ form_widget(form.isAdmin) }}
                <span class="lever"></span>
                Admin
            </label>
        </div>

        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}

        {{ form_rest(form) }}

        <button class="waves-effect waves-light btn" type="submit">Save</button>

        {{ form_end(form) }}
        </div>
    </div>

{% endblock %}