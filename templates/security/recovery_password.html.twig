{% extends 'base.html.twig' %}
{% block title %}Zero PASSword Knowledge :: Recovery password{% endblock %}


{% block body %}
    <main class="container login-wrapper">
        <div class="login__box z-depth-2">
            <header class="login__header">
                <h5 class="login__header__title">Recovery password</h5>
            </header>

            {{ form_start(form, {'attr': {'class': 'login__form'} }) }}
            <div class="login__errors">
                {{ form_errors(form.email) }}
            </div>

            <div class="input-field">
                <i class="material-icons prefix">email</i>
                {{ form_widget(form.email, {'attr': {'autocomplete': 'off'} }) }}
                {{ form_label(form.email) }}
            </div>
                {{ form_rest(form) }}
            <button class="waves-effect waves-light btn" type="submit">Recovery password</button>
            {{ form_end(form) }}
            <div class="login__box__footer center-align">
                <small>
                    <a href="{{ path('login') }}">
                        Back
                    </a>
                </small>
            </div>
        </div>
    </main>
{% endblock %}