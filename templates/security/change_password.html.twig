{% extends 'base.html.twig' %}
{% block title %}Zero PASSword Knowledge :: Change your password{% endblock %}


{% block body %}
    <main class="container login-wrapper">
        <div class="login__box z-depth-2">
            {{ form_start(form, {'attr': {'class': 'login__form'} }) }}
            <div class="login__errors">
                {{ form_errors(form) }}
            </div>

            <div class="input-field">
                <i class="material-icons prefix">lock_open</i>
                {{ form_widget(form.newPassword.first) }}
                {{ form_label(form.newPassword.first, 'New password') }}
            </div>

            <div class="input-field">
                <i class="material-icons prefix">lock</i>
                {{ form_widget(form.newPassword.second) }}
                {{ form_label(form.newPassword.second, 'Repeat password') }}
            </div>

            {{ form_rest(form) }}
            <button class="waves-effect waves-light btn" type="submit">Change password</button>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}